<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#E6E6FA" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="10sp"
        android:paddingTop="10sp"
        android:paddingRight="10sp"
        android:paddingBottom="10sp"
        tools:context=".MainActivity"
        android:background="@drawable/background" >

    <TextView android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="156dp"
        android:paddingRight="156dp"
        android:text="Hello again!" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="0dp"
        android:paddingTop="0dp">
        <TextView
            android:id="@+id/journal_type_label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:gravity="left"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:selectAllOnFocus="true"
            android:text="time spend disconnected: "
            android:textSize="15sp"
            android:visibility="visible" />
        <TextView
            android:id="@+id/journal_type_text1"
            android:layout_width="217dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:hint="Emergency Type"
            android:inputType="text"
            android:textColor="#000000" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="0dp"
        android:paddingTop="0dp">
        <TextView
            android:id="@+id/journal_type_label2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:gravity="left"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:selectAllOnFocus="true"
            android:text="times phone was active: "
            android:textSize="15sp"
            android:visibility="visible" />
        <TextView
            android:id="@+id/journal_type_text"
            android:layout_width="217dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:hint="Emergency Type"
            android:inputType="text"
            android:textColor="#000000" />
    </LinearLayout>
    <TextView android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="
                      Love to see it! For the __ hours and __ minutes you spent disconnected from your phone, you reconnected with the world around you...pretty cool" />
    <TextView android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="
        Shoot for getting on your phone less than __ times next time! Keep it up :)
" />
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="Disconnect again!" />
        <Button android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:text= "Done!" />
    </LinearLayout>
</LinearLayout>
</ScrollView>