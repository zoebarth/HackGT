<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#E6E6FA" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="10sp"
        android:paddingTop="10sp"
        android:paddingRight="10sp"
        android:paddingBottom="10sp"
        tools:context=".MainActivity"
        android:background="@drawable/background" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="45dp"
            android:layout_marginTop="0dp"
            android:fontFamily="serif"
            android:gravity="top|center_horizontal"
            android:text="Self Mode"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#4D425D"
            android:textSize="40sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180sp"
            android:layout_marginBottom="25sp"
            android:background="#89B0DD"
            android:gravity="bottom|center_horizontal"
            android:paddingLeft="10sp"
            android:paddingTop="10sp"
            android:paddingRight="10sp"
            android:paddingBottom="10sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="90dp"
                android:gravity="top|center_horizontal"
                android:text= "How long do you want to disconnect for?"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="#4D425D"
                android:textSize="23sp"
                android:fontFamily="serif" />

            <Button
                android:id="@+id/time_mode_button"
                android:layout_width="250dp"
                android:layout_height="60sp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:background="#574472"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="normal"
                android:text="Set Time" />
        </LinearLayout>


        <Button
            android:id="@+id/start_button"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="20dp"
            android:background="#71A83E"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="normal"
            android:textColor="#ffffff"
            android:text="Start" />



        <Button android:id="@+id/stop_button"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:background="#f44336"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="normal"
            android:textColor="#ffffff"
            android:text="Stop" />

    </LinearLayout>

</ScrollView>